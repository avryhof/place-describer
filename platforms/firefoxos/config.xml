<?xml version='1.0' encoding='utf-8'?>
<widget id="com.placedescriber.www" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="firefoxos">
        <icon height="128" src="icon/icon-128.png" width="128" />
        <icon height="60" src="icon/icon-60.png" width="60" />
    </platform>
    <name>PlaceDescriber</name>
    <description>
        An app for building a database with coordinates for describing features within a place. 
    </description>
    <author email="amos@vryhof.net" href="http://vryhof.net">
        Amos Vryhof
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <permission description="Required for accessing user location." name="geolocation" />
    <feature name="Camera">
        <param name="firefoxos-package" value="Camera" />
    </feature>
    <permission name="systemXHR" privileged="true" />
    <feature name="Notification">
        <param name="firefoxos-package" value="Notification" />
    </feature>
</widget>
